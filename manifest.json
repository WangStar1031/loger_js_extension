{
    "manifest_version": 2,
    "name": "Loger",
    "version": "1.0",
    "icons": {
        "16": "16x16.png",
        "32": "32x32.png",
        "48": "48x48.png",
        "64": "64x64.png",
        "128": "128x128.png"
    },
    "browser_action": {
        "default_title": "Grab",
        "default_icon": "64x64.png",
        "default_popup": "popup.html"
    },
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": true
    },
    "commands": {
        "grab_grabster": {
            "suggested_key": {
                "default": "Ctrl+M"
            },
            "description": "Grab content",
            "global": true
        }
    },
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
    "permissions": [
        "http://siblola.pythonanywhere.com/*",
        "https://siblola.pythonanywhere.com/*",
        "storage",
        "contextMenus",
        "activeTab",
        "tabs"
    ]
}